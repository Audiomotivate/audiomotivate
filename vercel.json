{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "mkdir -p src && cp -r client/src/* src/ 2>/dev/null || cp -r src/* . 2>/dev/null || echo 'Using default structure' && npx vite build",
        "outputDirectory": "public"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ]
}
